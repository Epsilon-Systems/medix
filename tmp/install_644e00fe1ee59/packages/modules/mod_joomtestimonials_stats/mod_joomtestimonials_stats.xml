<?xml version="1.0" encoding="utf-8"?>

<extension type="module" version="3.0" client="site" method="upgrade">
    <name>JoomTestimonials Stats</name>
    <author>JoomBoost</author>
    <creationDate>February 2016</creationDate>
    <copyright>Copyright (c) 2013 - 2018 JoomBoost. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>support@joomboost.com</authorEmail>
    <authorUrl>https://www.joomboost.com</authorUrl>
    <version>4.5.3</version>
    <description>
        <![CDATA[
	<p class="alert alert-info">Testimonials stats from JoomTestimonials Component</p>
	]]>
    </description>
    <files>
        <filename module="mod_joomtestimonials_stats">mod_joomtestimonials_stats.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="tableclass"
                        type="text"
                        label="Table Class"
                        description=""
                        default="table table-striped"
                />
                <field
                        name="today"
                        type="radio"
                        class="btn-group"
                        default="1"
                        label="Today"
                        description="">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="yesterday"
                        type="radio"
                        class="btn-group"
                        default="1"
                        label="Yesterday"
                        description="">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="thismonth"
                        type="radio"
                        class="btn-group"
                        default="1"
                        label="This Month"
                        description="">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="lastmonth"
                        type="radio"
                        class="btn-group"
                        default="1"
                        label="Last Month"
                        description="">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="thisyear"
                        type="radio"
                        class="btn-group"
                        default="1"
                        label="This Year"
                        description="">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="lastyear"
                        type="radio"
                        class="btn-group"
                        default="1"
                        label="Last Year"
                        description="">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="total"
                        type="radio"
                        class="btn-group"
                        default="1"
                        label="Total"
                        description="">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC"
                >
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"
                />
                <field
                        name="cachemode"
                        type="hidden"
                        default="static"
                />
            </fieldset>
        </fields>
    </config>
</extension>